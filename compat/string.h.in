#include <ctype.h>

/* Vodoo to extend platform string.h file. */
#ifdef _MSC_VER
#include <../ucrt/string.h>
#else
#include_next <string.h>
#endif

#ifdef __cplusplus
extern "C" {
#endif

#ifndef HAVE_STRTRIM
